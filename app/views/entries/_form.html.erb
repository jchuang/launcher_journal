<%= form_for(@entry) do |f| %>

  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p class="field">
    <%= f.label :category_id, 'Category (optional):' %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name,
        include_blank: true ) %>
  </p>

  <p class="actions">
    <%= f.submit %>
  </p>

<% end %>
